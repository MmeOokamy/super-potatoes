
{% extends "base.html" %}

{% block body %}
  <div class="form-wrapper">

    <div class="logo">
      <img src="{{ url_for('static', filename='img/Ookalogo.png') }}" alt="logo"/>
    </div>

    {% for message in get_flashed_messages() %}
      <div class="alert alert-warning">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        {{ message }}
      </div>
    {% endfor %}

    <h1>Log In</h1>

    <form method="POST" action="/login">
      {{ form.csrf_token }}

      <fieldset class="email">
        {{ form.user_email.label }}
        {{ form.user_email(placeholder='youremail@example.com') }}
        {% if form.user_email.errors %}
          <ul class="errors">
            {% for error in form.user_email.errors %}
              <li>{{ error }}</li>{% endfor %}
          </ul>
        {% endif %}
      </fieldset>

      <fieldset class="password">
        {{ form.user_password.label }}
        {{ form.user_password }}
        {% if form.user_email.errors %}
          <ul class="errors">
            {% for error in form.user_password.errors %}
              <li>{{ error }}</li>{% endfor %}
          </ul>
        {% endif %}
      </fieldset>

      <div class="submit-button">
        {{ form.submit }}
      </div>

      <div class="login-signup">
        <span>Don't have an account? <a href="{{ url_for('auth_bp.signup') }}">Sign up.</a></span>
      </div>

    </form>
  </div>
{% endblock %}